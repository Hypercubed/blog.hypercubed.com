---
title: Archives
layout: archive
pageOrder: 3
icon: icon-calendar
---

<nav class="linklist">
	<% for document,index in @getCollection('posts').toJSON(): %>
		<% year = @getFormattedDate(document.date, "YYYY") %>
		<% month = @getFormattedDate(document.date, "MMM") %>
		<% if (index == 0 || year != lastYear): %>
			<h3><%= lastYear = year %></h3>
		<% end %>
		<li><span class="date"><%= @getFormattedDate(document.date) %></span> Â» <a href="<%= document.url %>"><%= document.title %></a></li>
	<% end %>
</nav>
