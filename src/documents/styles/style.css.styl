@import 'nib'

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

a, a:link
	cursor pointer
	
html
	body
		background-color: #eee;

@media (min-width: 1200px) html 
	margin-top: 30px;
	
#container
	background-color: #fff;
	padding: 0
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	.row
		margin-left: 0px

#header-image
	margin: 0;
	background-image: url('/images/4.jpg');
	background-size: cover;
	text-align: center;
	height: 200px;
	background-color: #f5f5f5;
	//position: fixed;
	//width: 1130px;
	h1
		margin-top: 0;
		padding-top: 20px;
		color: #fff;
		text-shadow: 2px 2px 2px #333333;

.content
	padding: 20px;
		
.navbar
	margin-bottom: 0px;
	.navbar-inner
		padding 0
		.brand
			margin-left: 10px

.navbar .nav.pull-right
	margin-right: 20px;

.social
	padding: 15px 0;
	text-align: center;
	background-color: #f5f5f5;
	border-top: 1px solid #fff;
	border-bottom: 1px solid #ddd;

.post, article
	line-height: 1.6em;
	font-size: 1.2em;
	padding 0
	margin-bottom: 80px
	h2, h3, h4
		a
			color: #333;
		a:hover
			color: #005580;
	.meta, .postmetadata
		color: #999;
		font-size: 0.9em;
		line-height: 1.2em;
	.post-content
		margin-top: 10px

.meta
	a i
		color: #777;
		opacity: 0.8
		text-decoration:none
	a:hover i
		color: #333;
		opacity: 1
		text-decoration:none

#post-meta .pull-right
	margin-right: 40px;

.post-footer
	border-top: 2px solid rgba(0,49,79,0.08);
	background-color: #FAFAFA;
	margin: 1em 0;
	padding: 0 1em

section#related, section#feedback
	margin-top 3em;
	padding 1em
	background-color: #FAFAFA;
	
footer.footer
	padding: 15px 15px 36px 15px;

pre .coffeescript .javascript, pre .javascript .xml, pre .tex .formula, pre .xml .javascript, pre .xml .vbscript, pre .xml .css, pre .xml .cdata
	opacity: 1;


// Affix

.navbar.affix
	top: 0px

#post-meta.affix
	top: 40px
	background-color: none;
	line-height: 2em;
	margin-left: -20px
	padding: 10px 20px
	.addthis_toolbox
		margin-top: 5px

#post-title.affix
	top: 40px
	background-color: #f5f5f5;
	-webkit-box-shadow: 0 1px 10px rgba(0,0,0,.1);
	-moz-box-shadow: 0 1px 10px rgba(0,0,0,.1);
	box-shadow: 0 1px 10px rgba(0,0,0,.1);
	//background-image: linear-gradient(to bottom, #ffffff, #f2f2f2);
	background-repeat: repeat-x;
	text-align: center
	margin-left: -20px
	h2
		font-size: 0.9em;
		line-height: 2em;
