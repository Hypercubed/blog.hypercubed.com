@import 'nib'

a, a:link
	cursor pointer

body
	padding-top 60px

html
	margin-top: 15px;
	
table
	tfoot, tbody
		th
			border-top 1px solid #DDD
			
#banner
	padding: 5px;
	#header-image
		-webkit-border-radius: 6px;
		-moz-border-radius: 6px;
		border-radius: 6px;
		background-image: url('http://pcdn.500px.net/29283085/093a45d64d31f7b8373dcdc34a7407f18a88b1f0/4.jpg');
		background-size: cover;
		text-align: center;
		height: 200px;
		h1
			margin-top: 0;
			padding-top: 20px;
			color: #fff;
		
footer.footer
	margin-top: 45px;
	padding: 15px 15px 36px 15px;

footer.footer, .post .footer
	border-top: 1px solid #E5E5E5;
	background-color: #FAFAFA;
	margin-top: 45px;
	
.post
	line-height: 1.6em;
	font-size: 1.2em;
	.meta, .postmetadata
		color: #999;
		font-size: 0.9em;
		line-height: 1.5em;

.feedback
	margin-top: 50px;