@import 'nib'

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

a, a:link
	cursor pointer
	
html
	margin: 0;
	padding: 0;
	body
		background-color: #fff;
		margin: 0;
		padding: 0;

@media (min-width: 1200px) html 
	margin-top: 0px;
	
#container
	background-color: #fff;
	padding: 0
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	//margin-top: 20px;
	//z-index: 110;
	.row
		margin-left: 0px

#header-image
	width: 100%
	margin: 0;
	padding-top: 20px;
	background-image: url('/images/5.jpg');
	background-position: 0px -300px;
	background-size: cover;
	text-align: center;
	height: 100px;
	background-color: #f5f5f5;
	//position: fixed;
	//z-index: -1;
	//width: 1130px;
	h1 a
		margin: 0;
		padding: 0;
		color: #fff;
		text-shadow: 2px 2px 2px #333333;
		text-decoration: none;
		font-size: 72px;

#header-image.home
	padding-top: 300px;
	background-position: 0px 0px;
	height: 600px;

#content
	.section
		text-align: center;
		padding: 60px;
		margin: 30px 0;
		font-size: 32px;
		font-weight: 200;
		line-height: 60px;
		color: inherit;
		.nav-pills a:hover
			text-decoration: none
		//.nav-pills a
		//	padding-top: 8px;
		//	padding-bottom: 8px;
		//	margin-top: 2px;
		//	margin-bottom: 2px;
		//	-webkit-border-radius: 5px;
		//	-moz-border-radius: 5px;
		//	border-radius: 5px;
		.linklist
			font-size: 18px;
			text-align: left
			list-style-type none

.content
	padding: 20px;
	margin-top: 20px;
		
.navbar
	display: none;
	margin-bottom: 0px;
	z-index: 130
	.navbar-inner
		padding 0
		.brand
			margin-left: 10px

.navbar .nav.pull-right
	margin-right: 20px;

.post, article
	line-height: 1.6em;
	font-size: 1.2em;
	padding 0
	margin-bottom: 80px
	h2, h3, h4
		a
			color: #333;
		a:hover
			color: #005580;
	.post-content
		margin-top: 10px

#post-meta
	color: #999;
	font-size: 0.9em;
	line-height: 1.2em;
	a i
		color: #777;
		opacity: 0.8
		text-decoration:none
	a:hover i
		color: #333;
		opacity: 1
		text-decoration:none

#post-meta .pull-right
	margin-right: 40px;

.post-footer
	border-top: 2px solid rgba(0,49,79,0.08);
	background-color: #FAFAFA;
	margin: 1em 0;
	padding: 0 1em

section#related, section#feedback
	margin-top 3em;
	padding 1em
	background-color: #FAFAFA;
	
.footer
	text-align: center;
	padding: 30px 0;
	margin-top: 70px;
	border-top: 1px solid #e5e5e5;
	background-color: #f5f5f5;

pre .coffeescript .javascript, pre .javascript .xml, pre .tex .formula, pre .xml .javascript, pre .xml .vbscript, pre .xml .css, pre .xml .cdata
	opacity: 1;

hr.soften
	height: 1px;
	margin: 70px 0;
	background-image: -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
	background-image: -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
	background-image: -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
	background-image: -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.1), rgba(0,0,0,0));
	border: 0;

// Affix

//#header-image.affix
//	position: fixed

#main-nav
	float left

#main-nav.affix
	top: 0px
	z-index: 130

#post-header
	height 80px

#post-meta
	float left

#post-meta.affix
	top: 20px
	background-color: none;
	line-height: 2em;
	margin-left: -20px
	padding: 10px 20px
	z-index: 140
	.addthis_toolbox
		margin-top: 5px

#post-title
	float left

#post-title.affix
	top: 20px
	background-color: #fff;
	-webkit-box-shadow: 0 1px 10px rgba(0,0,0,.1);
	-moz-box-shadow: 0 1px 10px rgba(0,0,0,.1);
	box-shadow: 0 1px 10px rgba(0,0,0,.1);
	text-align: center
	margin-left: -20px
	z-index: 120
	h2
		font-size: 0.9em;
		line-height: 2em;

input.gsc-input
	margin-top: 10px;

span.date
	color: #aaa;
	font-family: Monaco, "Courier New", monospace;