@import 'nib'

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

a, a:link
	cursor pointer
	
html
	margin-top: 30px;
	body
		background-color: #fff;
	
.affix
	top: 10px
	

#header-image
	margin-bottom: 5px;
	background-image: url('http://pcdn.500px.net/29283085/093a45d64d31f7b8373dcdc34a7407f18a88b1f0/4.jpg');
	background-size: cover;
	text-align: center;
	height: 200px;
	h1
		margin-top: 0;
		padding-top: 20px;
		color: #fff;
		text-shadow: 2px 2px 2px #333333;
		
.navbar
	margin-bottom: 0px;

#container
	background-color: #fff;
	padding: 10px 15px 10px 15px
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	.row
		margin-left: 0px

.post, article
	line-height: 1.6em;
	font-size: 1.2em;
	padding 0
	h2, h3, h4
		a
			color: #333;
		a:hover
			color: #005580;
	.meta, .postmetadata
		color: #999;
		font-size: 0.9em;
		line-height: 1.5em;
		
.post-footer
	border-top: 2px solid rgba(0,49,79,0.08);
	background-color: #FAFAFA;
	margin: 1em 0;
	padding: 0 1em

section#related, section#feedback
	margin-top 3em;
	padding 1em
	background-color: #FAFAFA;
	
footer.footer
	border-top: 1px solid #E5E5E5;
	border-bottom: 1px solid #E5E5E5;
	background-color: #FAFAFA;
	margin-top: 45px;
	padding: 15px 15px 36px 15px;