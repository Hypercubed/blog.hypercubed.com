@import 'nib'

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

a, a:link
	cursor pointer
	
html
	margin-top: 30px;
	body
		background-color: #fff;
	
.affix
	top: 10px
	

#header-image
	margin-bottom: 0;
	background-image: url('/images/4.jpg');
	background-size: cover;
	text-align: center;
	height: 200px;
	h1
		margin-top: 0;
		padding-top: 20px;
		color: #fff;
		text-shadow: 2px 2px 2px #333333;
		
.navbar
	margin-bottom: 0px;
	
.social
	padding: 15px 0;
	text-align: center;
	background-color: #f5f5f5;
	border-top: 1px solid #fff;
	border-bottom: 1px solid #ddd;

#container
	background-color: #fff;
	padding: 10px 15px 10px 15px
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	.row
		margin-left: 0px

.post, article
	line-height: 1.6em;
	font-size: 1.2em;
	padding 0
	margin-bottom: 80px
	h2, h3, h4
		a
			color: #333;
		a:hover
			color: #005580;
	.meta, .postmetadata
		color: #999;
		font-size: 0.7em;
		line-height: 1.0em;
		margin: 0 0 0 0px
	.post-content
		margin-top: 10px
		
.post-footer
	border-top: 2px solid rgba(0,49,79,0.08);
	background-color: #FAFAFA;
	margin: 1em 0;
	padding: 0 1em

section#related, section#feedback
	margin-top 3em;
	padding 1em
	background-color: #FAFAFA;
	
footer.footer
	border-top: 1px solid #E5E5E5;
	border-bottom: 1px solid #E5E5E5;
	background-color: #FAFAFA;
	margin-top: 45px;
	padding: 15px 15px 36px 15px;